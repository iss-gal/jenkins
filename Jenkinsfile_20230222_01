def a = 10
def b = 20
def file_text = '/var/lib/jenkins/workspace/Exercicio5/text.txt'
pipeline
{
    agent any
    stages
    {
        stage ("Creacion de Archivo")
        {
            steps
            {
                script
                {
                    def c = (a*b)
                    println c
                    writeFile(file: 'text.txt', text: c)
                }
            }
        }
        stage ("Lectura de Archivo")
        {
            steps
            {
                script
                {
                    def data = readFile(file: 'text.txt')
                    println data
                }
             }
        }     
    }
}
